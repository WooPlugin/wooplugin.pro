---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { pluginDocs } from '../../config/docs-nav';
---

<Layout title="Documentation" description="Plugin documentation for WooPlugin products. Choose a plugin to get started with guides, feature docs, and troubleshooting.">
  <Header />

  <main class="pt-32 pb-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Hero -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-text mb-4">Documentation</h1>
        <p class="text-lg text-text-muted max-w-2xl mx-auto">
          Choose a plugin to browse its documentation.
        </p>
      </div>

      <!-- Plugin Picker -->
      <div class="grid gap-6 sm:grid-cols-2 mb-16">
        {pluginDocs.map((plugin) => (
          <a
            href={`/docs/${plugin.sections[0].items[0].slug}`}
            class="group block p-8 bg-white border border-gray-200 rounded-2xl hover:border-primary/50 hover:shadow-lg transition-all"
          >
            <div class="flex items-start gap-4 mb-4">
              <div class="flex-shrink-0 w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={plugin.icon} />
                </svg>
              </div>
              <div>
                <h2 class="text-xl font-bold text-text group-hover:text-primary transition-colors">
                  {plugin.name}
                </h2>
                <p class="text-sm text-text-muted">
                  {plugin.description}
                </p>
              </div>
            </div>

            <div class="space-y-2">
              {plugin.sections.map((section) => (
                <div class="flex items-center gap-2 text-sm text-text-muted">
                  <svg class="w-4 h-4 text-primary/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  <span>{section.title}</span>
                  <span class="text-xs text-text-muted/60">({section.items.length})</span>
                </div>
              ))}
            </div>
          </a>
        ))}
      </div>

      <!-- Support CTA -->
      <div class="p-6 bg-primary/5 rounded-xl text-center">
        <h2 class="text-lg font-semibold text-text mb-2">Need Help?</h2>
        <p class="text-text-muted mb-4">
          Can't find what you're looking for?
        </p>
        <a
          href="/support"
          class="inline-flex items-center justify-center px-6 py-2 text-sm font-medium text-white bg-primary hover:bg-primary-dark rounded-lg transition-colors"
        >
          Contact Support
        </a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
