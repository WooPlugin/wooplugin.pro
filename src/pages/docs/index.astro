---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import { docsNav } from '../../config/docs-nav';

const sectionCards = [
  {
    title: 'Getting Started',
    description: 'Installation, license activation, and migrating from the free version.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />`,
    href: '/docs/getting-started/installation',
  },
  {
    title: 'Feed Channels',
    description: 'Set up feeds for Google Shopping, Facebook, Pinterest, TikTok, and more.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />`,
    href: '/docs/feeds/google-shopping',
  },
  {
    title: 'Features',
    description: 'Smart Auto-Fill, scheduled updates, category mapping, and more.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />`,
    href: '/docs/features/smart-auto-fill',
  },
  {
    title: 'Troubleshooting',
    description: 'Common errors, solutions, and frequently asked questions.',
    icon: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />`,
    href: '/docs/troubleshooting/common-errors',
  },
];
---

<Layout title="Documentation" description="Learn how to use Product Feed for WooCommerce Pro. Guides for Google Shopping, Facebook, Pinterest, TikTok, and more.">
  <Header variant="pro" />

  <main class="pt-24 pb-16 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto">
      <!-- Hero -->
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-text mb-4">Documentation</h1>
        <p class="text-lg text-text-muted max-w-2xl mx-auto">
          Everything you need to set up and optimize your product feeds.
          Get started quickly or dive deep into advanced features.
        </p>
      </div>

      <!-- Section Cards -->
      <div class="grid gap-6 sm:grid-cols-2 mb-16">
        {sectionCards.map((card) => (
          <a
            href={card.href}
            class="group block p-6 bg-white border border-gray-200 rounded-xl hover:border-primary/50 hover:shadow-lg transition-all"
          >
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-primary/10 rounded-lg flex items-center justify-center group-hover:bg-primary/20 transition-colors">
                <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <Fragment set:html={card.icon} />
                </svg>
              </div>
              <div>
                <h2 class="text-lg font-semibold text-text group-hover:text-primary transition-colors">
                  {card.title}
                </h2>
                <p class="mt-1 text-sm text-text-muted">
                  {card.description}
                </p>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- Quick Links -->
      <div class="border-t border-gray-200 pt-12">
        <h2 class="text-2xl font-bold text-text mb-6">All Documentation</h2>

        <div class="grid gap-8 sm:grid-cols-2">
          {docsNav.map((section) => (
            <div>
              <h3 class="text-sm font-semibold text-text uppercase tracking-wider mb-3">
                {section.title}
              </h3>
              <ul class="space-y-2">
                {section.items.map((item) => (
                  <li>
                    <a
                      href={`/docs/${item.slug}`}
                      class="text-text-muted hover:text-primary transition-colors"
                    >
                      {item.title}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>

      <!-- Support CTA -->
      <div class="mt-16 p-6 bg-primary/5 rounded-xl text-center">
        <h2 class="text-lg font-semibold text-text mb-2">Need Help?</h2>
        <p class="text-text-muted mb-4">
          Can't find what you're looking for? Our support team is here to help.
        </p>
        <a
          href="/#contact"
          class="inline-flex items-center justify-center px-6 py-2 text-sm font-medium text-white bg-primary hover:bg-primary-dark rounded-lg transition-colors"
        >
          Contact Support
        </a>
      </div>
    </div>
  </main>
</Layout>
