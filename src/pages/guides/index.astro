---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const guides = await getCollection('guides');
const sortedGuides = guides.sort((a, b) =>
  b.data.publishedAt.getTime() - a.data.publishedAt.getTime()
);

const featuredGuides = sortedGuides.filter(g => g.data.featured);
const regularGuides = sortedGuides.filter(g => !g.data.featured);

// Get unique categories
const categories = [...new Set(guides.map(g => g.data.category))];

// Category display names
const categoryNames: Record<string, string> = {
  'google-shopping': 'Google Shopping',
  'general': 'Social Commerce',
  'woocommerce': 'WooCommerce',
};
---

<Layout
  title="WooCommerce Product Feed Guides - Google Shopping, Facebook, Pinterest & More"
  description="Learn how to sell on Google Shopping, Facebook, Instagram, Pinterest, and more. Product feed setup guides and optimization tips for WooCommerce stores."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-4xl sm:text-5xl font-bold tracking-tight text-text mb-6">
          Product Feed Guides
        </h1>
        <p class="text-lg sm:text-xl text-text-muted max-w-2xl mx-auto">
          Sell on Google Shopping, Facebook, Instagram, Pinterest, and more. Setup guides, optimization tips, and strategies for every channel.
        </p>
      </div>
    </section>

    <!-- Category Filter -->
    <section class="pb-8 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <div class="flex flex-wrap justify-center gap-2" id="category-filters">
          <button
            data-category="all"
            class="category-btn active px-4 py-2 text-sm font-medium rounded-full border transition-colors"
          >
            All Guides
            <span class="ml-1 text-xs opacity-70">({sortedGuides.length})</span>
          </button>
          {categories.map((category) => {
            const count = guides.filter(g => g.data.category === category).length;
            return (
              <button
                data-category={category}
                class="category-btn px-4 py-2 text-sm font-medium rounded-full border transition-colors"
              >
                {categoryNames[category] || category}
                <span class="ml-1 text-xs opacity-70">({count})</span>
              </button>
            );
          })}
        </div>
      </div>
    </section>

    <!-- Featured Guides -->
    {featuredGuides.length > 0 && (
      <section class="py-8 px-4 sm:px-6 lg:px-8">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-xl font-bold text-text mb-6 flex items-center gap-2">
            <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            Featured Guides
          </h2>
          <div class="grid md:grid-cols-2 gap-6">
            {featuredGuides.map((guide) => (
              <a
                href={`/guides/${guide.slug}`}
                data-category={guide.data.category}
                class="guide-card group block bg-white rounded-xl overflow-hidden shadow-sm border border-gray-100 hover:border-primary/30 hover:shadow-lg transition-all"
              >
                {guide.data.coverImage && (
                  <div class="aspect-[16/9] overflow-hidden bg-gray-100">
                    <img
                      src={guide.data.coverImage.src}
                      alt={guide.data.coverImage.alt}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="p-5">
                  <span class="inline-block px-2 py-1 text-xs font-medium text-primary bg-primary/10 rounded mb-3">
                    {categoryNames[guide.data.category] || guide.data.category.replace('-', ' ').toUpperCase()}
                  </span>
                  <h3 class="text-lg font-semibold text-text mb-2 group-hover:text-primary transition-colors line-clamp-2">
                    {guide.data.title}
                  </h3>
                  <p class="text-sm text-text-muted mb-3 line-clamp-2">
                    {guide.data.description}
                  </p>
                  <div class="flex items-center gap-3 text-xs text-text-muted">
                    <span>{guide.data.publishedAt.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                    {guide.data.readingTime && (
                      <>
                        <span>•</span>
                        <span>{guide.data.readingTime}</span>
                      </>
                    )}
                  </div>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- All Guides Grid -->
    <section class="py-8 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-xl font-bold text-text mb-6">
          {featuredGuides.length > 0 ? 'More Guides' : 'All Guides'}
        </h2>

        {sortedGuides.length === 0 ? (
          <div class="text-center py-12">
            <p class="text-text-muted">Guides coming soon. Check back later!</p>
          </div>
        ) : (
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6" id="guides-grid">
            {regularGuides.map((guide) => (
              <a
                href={`/guides/${guide.slug}`}
                data-category={guide.data.category}
                class="guide-card group block bg-white rounded-xl overflow-hidden shadow-sm border border-gray-100 hover:border-primary/30 hover:shadow-lg transition-all"
              >
                {guide.data.coverImage ? (
                  <div class="aspect-[16/9] overflow-hidden bg-gray-100">
                    <img
                      src={guide.data.coverImage.src}
                      alt={guide.data.coverImage.alt}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                ) : (
                  <div class="aspect-[16/9] bg-gradient-to-br from-primary/10 to-secondary/10 flex items-center justify-center">
                    <svg class="w-12 h-12 text-primary/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                  </div>
                )}
                <div class="p-5">
                  <span class="inline-block px-2 py-1 text-xs font-medium text-primary bg-primary/10 rounded mb-3">
                    {categoryNames[guide.data.category] || guide.data.category.replace('-', ' ').toUpperCase()}
                  </span>
                  <h3 class="text-base font-semibold text-text mb-2 group-hover:text-primary transition-colors line-clamp-2">
                    {guide.data.title}
                  </h3>
                  <p class="text-sm text-text-muted mb-3 line-clamp-2">
                    {guide.data.description}
                  </p>
                  <div class="flex items-center gap-3 text-xs text-text-muted">
                    <span>{guide.data.publishedAt.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                    {guide.data.readingTime && (
                      <>
                        <span>•</span>
                        <span>{guide.data.readingTime}</span>
                      </>
                    )}
                  </div>
                </div>
              </a>
            ))}
          </div>
        )}

        <!-- No results message (hidden by default) -->
        <div id="no-results" class="hidden text-center py-12">
          <p class="text-text-muted">No guides found in this category.</p>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 px-4 sm:px-6 lg:px-8 bg-bg-alt">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-2xl font-bold text-text mb-4">
          Ready to start selling?
        </h2>
        <p class="text-text-muted mb-8 max-w-xl mx-auto">
          Get started with Google Shopping for free. Upgrade to Pro for Facebook, Instagram, Pinterest, TikTok, and more.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://wordpress.org/plugins/gtin-product-feed-for-google-shopping/?utm_source=wooplugin&utm_medium=website&utm_campaign=guides"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-primary rounded-lg hover:bg-primary/90 transition-colors"
          >
            Download Free Plugin
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
          </a>
          <a
            href="/google-shopping-pro"
            class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-text border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
          >
            View Pro Features
          </a>
        </div>
        <p class="mt-4 text-sm text-text-muted">
          Free: Google Shopping • Pro: +Facebook, Instagram, Pinterest, TikTok, Bing, Snapchat
        </p>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .category-btn {
    border-color: #e5e7eb;
    color: #6b7280;
    background: white;
  }

  .category-btn:hover {
    border-color: #7f54b3;
    color: #7f54b3;
  }

  .category-btn.active {
    background: #7f54b3;
    border-color: #7f54b3;
    color: white;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .guide-card.hidden {
    display: none;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.category-btn');
    const guideCards = document.querySelectorAll('.guide-card');
    const noResults = document.getElementById('no-results');

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const category = button.getAttribute('data-category');

        // Update active state
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        // Filter cards
        let visibleCount = 0;
        guideCards.forEach(card => {
          const cardCategory = card.getAttribute('data-category');
          if (category === 'all' || cardCategory === category) {
            card.classList.remove('hidden');
            visibleCount++;
          } else {
            card.classList.add('hidden');
          }
        });

        // Show/hide no results message
        if (noResults) {
          noResults.classList.toggle('hidden', visibleCount > 0);
        }
      });
    });
  });
</script>
