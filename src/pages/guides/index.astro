---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const guides = await getCollection('guides');
const sortedGuides = guides.sort((a, b) =>
  b.data.publishedAt.getTime() - a.data.publishedAt.getTime()
);

const featuredGuides = sortedGuides.filter(g => g.data.featured);
const regularGuides = sortedGuides.filter(g => !g.data.featured);
---

<Layout
  title="WooCommerce Product Feed Guides - Google Shopping, Facebook, Pinterest & More"
  description="Learn how to sell on Google Shopping, Facebook, Instagram, Pinterest, and more. Product feed setup guides and optimization tips for WooCommerce stores."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl sm:text-5xl font-bold tracking-tight text-text mb-6">
          Product Feed Guides for WooCommerce
        </h1>
        <p class="text-lg sm:text-xl text-text-muted max-w-2xl mx-auto">
          Sell on Google Shopping, Facebook, Instagram, Pinterest, and more. Setup guides, optimization tips, and strategies for every channel.
        </p>
      </div>
    </section>

    <!-- Featured Guides -->
    {featuredGuides.length > 0 && (
      <section class="py-12 px-4 sm:px-6 lg:px-8 bg-bg-alt">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl font-bold text-text mb-8">Featured Guides</h2>
          <div class="grid gap-6">
            {featuredGuides.map((guide) => (
              <a
                href={`/guides/${guide.slug}`}
                class="block bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:border-primary/30 hover:shadow-md transition-all"
              >
                <div class="flex items-start justify-between gap-4">
                  <div>
                    <span class="inline-block px-2 py-1 text-xs font-medium text-primary bg-primary/10 rounded mb-3">
                      {guide.data.category.replace('-', ' ').toUpperCase()}
                    </span>
                    <h3 class="text-xl font-semibold text-text mb-2 group-hover:text-primary">
                      {guide.data.title}
                    </h3>
                    <p class="text-text-muted mb-3">
                      {guide.data.description}
                    </p>
                    <div class="flex items-center gap-4 text-sm text-text-muted">
                      <span>{guide.data.publishedAt.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
                      {guide.data.readingTime && <span>{guide.data.readingTime}</span>}
                    </div>
                  </div>
                  <svg class="w-5 h-5 text-gray-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </a>
            ))}
          </div>
        </div>
      </section>
    )}

    <!-- All Guides -->
    <section class="py-12 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl font-bold text-text mb-8">
          {featuredGuides.length > 0 ? 'All Guides' : 'Guides'}
        </h2>

        {sortedGuides.length === 0 ? (
          <div class="text-center py-12">
            <p class="text-text-muted">Guides coming soon. Check back later!</p>
          </div>
        ) : (
          <div class="grid gap-6">
            {regularGuides.map((guide) => (
              <a
                href={`/guides/${guide.slug}`}
                class="block bg-white rounded-xl p-6 shadow-sm border border-gray-100 hover:border-primary/30 hover:shadow-md transition-all"
              >
                <div class="flex items-start justify-between gap-4">
                  <div>
                    <span class="inline-block px-2 py-1 text-xs font-medium text-primary bg-primary/10 rounded mb-3">
                      {guide.data.category.replace('-', ' ').toUpperCase()}
                    </span>
                    <h3 class="text-xl font-semibold text-text mb-2">
                      {guide.data.title}
                    </h3>
                    <p class="text-text-muted mb-3">
                      {guide.data.description}
                    </p>
                    <div class="flex items-center gap-4 text-sm text-text-muted">
                      <span>{guide.data.publishedAt.toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
                      {guide.data.readingTime && <span>{guide.data.readingTime}</span>}
                    </div>
                  </div>
                  <svg class="w-5 h-5 text-gray-400 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </a>
            ))}
          </div>
        )}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 px-4 sm:px-6 lg:px-8 bg-bg-alt">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-2xl font-bold text-text mb-4">
          Ready to start selling?
        </h2>
        <p class="text-text-muted mb-8 max-w-xl mx-auto">
          Get started with Google Shopping for free. Upgrade to Pro for Facebook, Instagram, Pinterest, TikTok, and more.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="https://wordpress.org/plugins/gtin-product-feed-for-google-shopping/?utm_source=wooplugin&utm_medium=website&utm_campaign=guides"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-primary rounded-lg hover:bg-primary/90 transition-colors"
          >
            Download Free Plugin
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
            </svg>
          </a>
          <a
            href="/google-shopping-pro"
            class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-text border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors"
          >
            View Pro Features
          </a>
        </div>
        <p class="mt-4 text-sm text-text-muted">
          Free: Google Shopping â€¢ Pro: +Facebook, Instagram, Pinterest, TikTok, Bing, Snapchat
        </p>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
