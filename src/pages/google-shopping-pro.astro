---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FAQ from '../components/FAQ';
import CompactContactForm from '../components/CompactContactForm';
import Tooltip from '../components/Tooltip';
import { Check, X, Clock, RefreshCw, Mail, Zap, Layers, Star } from 'lucide-preact';
import { pricing, getDiscountedPrices, getCheckoutUrl } from '../config/pricing';

// Get promotion and calculated prices from shared config
const promotion = pricing.promotion;
const { proPrice, proMonthly, agencyPrice, agencyMonthly } = getDiscountedPrices(pricing);

const testimonials = [
  {
    quote: "Pro saves me hours every week. Feed updates happen automatically—I just set it and forget it.",
    author: "Marcus Chen",
    company: "Outdoor Gear Hub",
    rating: 5,
  },
  {
    quote: "The category mapping feature alone is worth the price. What used to take an entire afternoon now takes minutes.",
    author: "Sarah Mitchell",
    company: "Handmade Candle Co.",
    rating: 5,
  },
  {
    quote: "Finally, a feed plugin that actually works. No more stale data showing up on Google Shopping.",
    author: "James Rodriguez",
    company: "TechAccessories",
    rating: 5,
  },
];

const proFaqs = [
  {
    question: 'Do I need Pro?',
    answer: 'If you update products frequently or have a large catalog, Pro saves you time with automatic feed updates. For smaller stores with occasional updates, the free version works great.',
  },
  {
    question: 'What if I already have the free version?',
    answer: 'Pro replaces Free completely. When you install Pro, it automatically migrates your settings from Free.',
  },
  {
    question: 'How does licensing work?',
    answer: 'Your license includes 1 year of updates and priority support. After year 1, Pro keeps working—but to receive new updates and support, you can renew at the same rate.',
  },
  {
    question: 'What happens after 1 year?',
    answer: 'Pro continues to work indefinitely. You just won\'t receive new features or support unless you renew. Most users renew to stay current with WooCommerce updates and get new features.',
  },
  {
    question: 'Can I upgrade later?',
    answer: 'Yes. Start with Free, and when you need automation, upgrade to Pro. Your existing data and settings stay intact.',
  },
  {
    question: 'How does Category Mapping save time?',
    answer: 'Set it once per category, done forever. Every product inherits the right Google category automatically. Need to override? One click per product, or find the best match from 5,500+ categories in one second using autocomplete search.',
  },
  {
    question: 'What does Auto-fill do?',
    answer: 'Detects color, size, material, brand, and more from your existing product data. One click to apply. With hundreds of products, this saves hours of manual data entry.',
  },
  {
    question: 'What payment methods do you accept?',
    answer: 'We accept all major credit cards. Payment is processed securely through our payment provider.',
  },
  {
    question: 'Is there a refund policy?',
    answer: 'Yes. If Pro doesn\'t work for your store, contact us within 14 days for a full refund. No questions asked.',
  },
];

const comparisonFeatures = [
  { feature: 'GTIN, Brand, MPN, Condition fields', free: true, pro: true },
  { feature: 'Unlimited products', free: true, pro: true },
  { feature: 'Google Merchant feed', free: true, pro: true },
  { feature: 'Variable product support', free: true, pro: true },
  { feature: 'HPOS compatible', free: true, pro: true, description: 'Fully compatible with WooCommerce High-Performance Order Storage for faster, more scalable stores.' },
  { feature: 'Scheduled auto-updates', free: false, pro: true, description: 'Automatically regenerate your feed on a schedule—hourly, twice daily, or daily. Set it once and forget it.' },
  { feature: 'Update on product save', free: false, pro: true, description: 'Feed regenerates instantly whenever you save a product. Price changes, stock updates, and new products sync automatically.' },
  { feature: 'Facebook/Meta Catalog feed', free: false, pro: true, description: 'Generate feeds optimized for Facebook Shops, Instagram Shopping, and Meta advertising campaigns.' },
  { feature: 'Pinterest, TikTok, Bing, Snapchat feeds', free: false, pro: true, description: 'Reach more customers with feeds formatted for each platform\'s specific requirements.' },
  { feature: 'Advanced fields (color, size, age, gender)', free: false, pro: true, description: 'Add detailed product attributes that help shoppers filter and find exactly what they\'re looking for.' },
  { feature: 'Google Product Category (5,500+ categories)', free: false, pro: true, description: 'Access the complete Google taxonomy with searchable dropdown. Proper categorization improves ad relevance and performance.' },
  { feature: 'Auto Category Mapping', free: false, pro: true, description: 'Map your WooCommerce categories to Google Product Categories once. All products in that category automatically use the correct GPC—no per-product setup needed.' },
  { feature: 'Smart Auto-fill from product data', free: false, pro: true, description: 'Automatically detects color, size, material, and brand from your product titles and attributes. Suggests matching categories.' },
  { feature: 'Custom Labels for campaigns', free: false, pro: true, description: 'Tag products with custom labels (0-4) for campaign segmentation—group by margin, season, bestseller status, etc.' },
  { feature: 'Advanced product filters', free: false, pro: true, description: 'Include or exclude products by category, tag, stock status, price range, or custom rules.' },
  { feature: 'Priority email support', free: false, pro: true },
];
---

<Layout
  title="Google Shopping Pro - Automated Feed Updates for WooCommerce"
  description="Automate your Google Shopping feed. Scheduled updates, auto-regenerate on product changes, priority support. $79/year."
>
  <Header variant="pro" promotion={promotion} />

  <main>
    <!-- Hero -->
    <section class="pt-32 pb-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-3 py-1 mb-6 text-sm font-medium text-primary bg-primary/10 rounded-full">
          <Zap className="w-4 h-4" />
          Pro Add-on
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-text mb-6">
          Never Miss a Sale From
          <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
            {' '}Stale Product Data
          </span>
        </h1>

        <p class="text-lg sm:text-xl text-text-muted mb-8 max-w-2xl mx-auto">
          Your products. Always current. Zero manual work.
          Pro keeps Google Shopping in sync automatically.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-6">
          <a href="#pricing" class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-primary rounded-lg hover:bg-primary/90 transition-colors">
            Get Pro - $7/mo
          </a>
          <a href="#comparison" class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-text border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
            Compare Free vs Pro
          </a>
        </div>

        <p class="text-sm text-text-muted">
          14-day money-back guarantee. No questions asked.
        </p>
      </div>
    </section>

    <!-- Problem Section -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-bg-alt">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            Outdated Feeds Cost You Sales
          </h2>
          <p class="text-lg text-text-muted">
            Stores with 500+ products save 5+ hours/week with automation
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
          <div class="bg-white rounded-xl p-6 border border-red-100">
            <div class="w-12 h-12 rounded-full bg-red-100 flex items-center justify-center mb-4">
              <Clock className="w-6 h-6 text-red-500" />
            </div>
            <h3 class="font-semibold text-text mb-2">Stale Feed Data</h3>
            <p class="text-text-muted text-sm">
              You update prices and stock, but forget to regenerate the feed. Google shows outdated info.
            </p>
          </div>

          <div class="bg-white rounded-xl p-6 border border-red-100">
            <div class="w-12 h-12 rounded-full bg-red-100 flex items-center justify-center mb-4">
              <RefreshCw className="w-6 h-6 text-red-500" />
            </div>
            <h3 class="font-semibold text-text mb-2">Manual Regeneration</h3>
            <p class="text-text-muted text-sm">
              Every product change means logging in, clicking regenerate, and waiting. Time you could spend elsewhere.
            </p>
          </div>

          <div class="bg-white rounded-xl p-6 border border-red-100">
            <div class="w-12 h-12 rounded-full bg-red-100 flex items-center justify-center mb-4">
              <X className="w-6 h-6 text-red-500" />
            </div>
            <h3 class="font-semibold text-text mb-2">Missed Sales</h3>
            <p class="text-text-muted text-sm">
              Out-of-stock items still showing on Google. Price changes not reflected. Customers bounce.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Solution Section -->
    <section class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            Your Products. Always Current. Zero Manual Work.
          </h2>
          <p class="text-lg text-text-muted">
            Feed updates in under 60 seconds when you change a product
          </p>
        </div>

        <div class="grid sm:grid-cols-2 gap-8">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center flex-shrink-0">
              <Clock className="w-6 h-6 text-accent" />
            </div>
            <div>
              <h3 class="font-semibold text-text mb-2">Sales Don't Wait—Neither Should Your Feed</h3>
              <p class="text-text-muted">
                Set it to hourly, twice daily, or daily. Your feed regenerates automatically on schedule.
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center flex-shrink-0">
              <RefreshCw className="w-6 h-6 text-accent" />
            </div>
            <div>
              <h3 class="font-semibold text-text mb-2">Update on Save</h3>
              <p class="text-text-muted">
                Change a product? Feed regenerates automatically. No extra clicks needed.
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center flex-shrink-0">
              <Mail className="w-6 h-6 text-accent" />
            </div>
            <div>
              <h3 class="font-semibold text-text mb-2">Priority Support</h3>
              <p class="text-text-muted">
                Email support directly from the developer. Responses within 24 hours. Real answers, not ticket queues.
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center flex-shrink-0">
              <Zap className="w-6 h-6 text-accent" />
            </div>
            <div>
              <h3 class="font-semibold text-text mb-2">Multi-Channel Feeds</h3>
              <p class="text-text-muted">
                Facebook, Pinterest, TikTok, Bing, and Snapchat feeds included. One plugin, all major platforms.
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center flex-shrink-0">
              <Zap className="w-6 h-6 text-accent" />
            </div>
            <div>
              <h3 class="font-semibold text-text mb-2">Smart Auto-fill</h3>
              <p class="text-text-muted">
                Detects color, size, material, brand from your product data. Saves hours of manual entry.
              </p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div class="w-12 h-12 rounded-xl bg-accent/10 flex items-center justify-center flex-shrink-0">
              <Layers className="w-6 h-6 text-accent" />
            </div>
            <div>
              <h3 class="font-semibold text-text mb-2">Category Mapping</h3>
              <p class="text-text-muted">
                Map once per category, done forever. Search 5,500+ Google categories with instant autocomplete.
              </p>
            </div>
          </div>
        </div>

        <!-- Product Screenshots -->
        <div class="mt-16 bg-gray-50 rounded-2xl p-8 border border-gray-200">
          <div class="text-center mb-8">
            <h3 class="text-xl font-semibold text-text mb-2">See Pro in Action</h3>
            <p class="text-text-muted">Clean, intuitive interface designed for WooCommerce</p>
          </div>
          <div class="grid md:grid-cols-3 gap-6">
            <div class="bg-white rounded-lg p-4 border border-gray-200 shadow-sm">
              <button type="button" class="screenshot-trigger w-full cursor-zoom-in" data-src="/images/screenshots/pro-dashboard.webp" data-alt="Feed Dashboard showing store health and multi-channel feed status">
                <img src="/images/screenshots/pro-dashboard.webp" alt="Feed Dashboard showing store health and multi-channel feed status" class="rounded-md mb-3 w-full" loading="lazy" />
              </button>
              <p class="text-sm font-medium text-text">Feed Dashboard</p>
              <p class="text-xs text-text-muted">Monitor feed status across all channels</p>
            </div>
            <div class="bg-white rounded-lg p-4 border border-gray-200 shadow-sm">
              <button type="button" class="screenshot-trigger w-full cursor-zoom-in" data-src="/images/screenshots/pro-scheduled-updates.webp" data-alt="Scheduled updates settings with auto-update on product save">
                <img src="/images/screenshots/pro-scheduled-updates.webp" alt="Scheduled updates settings with auto-update on product save" class="rounded-md mb-3 w-full" loading="lazy" />
              </button>
              <p class="text-sm font-medium text-text">Scheduled Updates</p>
              <p class="text-xs text-text-muted">Set it once, runs automatically</p>
            </div>
            <div class="bg-white rounded-lg p-4 border border-gray-200 shadow-sm">
              <button type="button" class="screenshot-trigger w-full cursor-zoom-in" data-src="/images/screenshots/pro-categorymapping.webp" data-alt="Category mapping with autocomplete search for 5,500+ Google categories">
                <img src="/images/screenshots/pro-categorymapping.webp" alt="Category mapping with autocomplete search for 5,500+ Google categories" class="rounded-md mb-3 w-full" loading="lazy" />
              </button>
              <p class="text-sm font-medium text-text">Category Mapping</p>
              <p class="text-xs text-text-muted">5,500+ Google categories with autocomplete</p>
            </div>
          </div>
        </div>

        <!-- Lightbox Dialog -->
        <dialog id="screenshot-lightbox" class="fixed inset-0 m-auto p-0 bg-transparent backdrop:bg-black/80 border-none overflow-visible [&::backdrop]:bg-black/80">
          <div class="relative">
            <button type="button" id="lightbox-close" class="absolute -top-3 -right-3 text-white bg-black/70 hover:bg-black rounded-full p-2 transition-colors z-10">
              <X className="w-5 h-5" />
            </button>
            <img id="lightbox-image" src="" alt="" class="block max-w-[90vw] max-h-[85vh] rounded-lg" />
          </div>
        </dialog>

        <div class="mt-12 text-center">
          <a href="/guides/automate-product-feeds-save-time" class="inline-flex items-center gap-2 text-primary hover:text-primary-dark font-medium transition-colors">
            See how stores save 5+ hours per week with automation
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-bg-alt">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            Trusted by WooCommerce Store Owners
          </h2>
          <div class="flex items-center justify-center gap-1 mb-2">
            {[1, 2, 3, 4, 5].map(() => (
              <Star className="w-5 h-5 fill-yellow-400 text-yellow-400" />
            ))}
          </div>
          <p class="text-text-muted">
            Rated 5 stars by store owners
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6">
          {testimonials.map((testimonial) => (
            <div class="bg-white rounded-xl p-6 border border-gray-100 shadow-sm flex flex-col">
              <div class="flex gap-0.5 mb-4">
                {[...Array(testimonial.rating)].map(() => (
                  <Star className="w-4 h-4 fill-yellow-400 text-yellow-400" />
                ))}
              </div>
              <blockquote class="text-text mb-4 flex-grow">
                "{testimonial.quote}"
              </blockquote>
              <div class="border-t border-gray-100 pt-4 mt-auto">
                <p class="font-semibold text-text">{testimonial.author}</p>
                <p class="text-sm text-text-muted">{testimonial.company}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Comparison Table -->
    <section id="comparison" class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            Free vs Pro
          </h2>
          <p class="text-lg text-text-muted">
            Everything in Free, plus automation
          </p>
        </div>

        <div class="bg-white rounded-2xl border border-gray-200 overflow-hidden">
          <div class="grid grid-cols-3 bg-gray-50 border-b border-gray-200">
            <div class="p-4 font-semibold text-text">Feature</div>
            <div class="p-4 font-semibold text-text text-center">Free</div>
            <div class="p-4 font-semibold text-primary text-center bg-primary/5">Pro</div>
          </div>
          {comparisonFeatures.map((item, i) => (
            <div class={`grid grid-cols-3 hover:bg-gray-50 transition-colors ${i < comparisonFeatures.length - 1 ? 'border-b border-gray-100' : ''}`}>
              <div class="p-4 text-text-muted flex items-center justify-between gap-2">
                <span>{item.feature}</span>
                {item.description && (
                  <Tooltip client:visible content={item.description} />
                )}
              </div>
              <div class="p-4 flex justify-center">
                {item.free === true ? (
                  <Check className="w-5 h-5 text-accent" />
                ) : (
                  <X className="w-5 h-5 text-gray-300" />
                )}
              </div>
              <div class="p-4 flex justify-center bg-primary/5">
                {item.pro === true ? (
                  <Check className="w-5 h-5 text-accent" />
                ) : typeof item.pro === 'string' ? (
                  <span class="text-sm text-text-muted">{item.pro}</span>
                ) : (
                  <X className="w-5 h-5 text-gray-300" />
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Pricing -->
    <section id="pricing" class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            Simple Pricing
          </h2>
          <p class="text-lg text-text-muted">
            Choose your plan. Cancel anytime.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-3xl mx-auto">
          <!-- Pro Single Site -->
          <div class="bg-white rounded-2xl p-8 shadow-sm border-2 border-primary relative flex flex-col hover:scale-[1.02] hover:shadow-lg transition-all duration-200">
            <div class="absolute -top-4 left-1/2 -translate-x-1/2">
              <span class="inline-flex items-center px-3 py-1 text-xs font-semibold text-white bg-primary rounded-full">
                Most Popular
              </span>
            </div>

            <div class="text-center mb-8">
              <h3 class="text-xl font-semibold text-text mb-2">Pro</h3>
              {promotion && (
                <div class="inline-block bg-red-100 text-red-700 text-xs font-semibold px-2 py-1 rounded-full mb-2">
                  {promotion.discount}% OFF
                </div>
              )}
              <div class="flex items-baseline justify-center gap-1">
                <span class="text-4xl font-bold text-text">${proMonthly}</span>
                <span class="text-text-muted">/month</span>
              </div>
              <p class="text-sm text-text-muted mt-1">
                {promotion ? (
                  <>
                    <span class="line-through text-text-muted/60">${pricing.pro.price}</span>
                    {' '}
                    <span class="text-green-600 font-semibold">${proPrice}/year</span>
                  </>
                ) : (
                  `Billed at $${pricing.pro.price}/year`
                )}
              </p>
              <p class="text-sm text-text-muted">Single site license</p>
            </div>

            <ul class="space-y-4 mb-8">
              <li class="flex items-start gap-3">
                <Check className="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                <span class="text-text-muted">All Free features</span>
              </li>
              <li class="flex items-start gap-3">
                <Check className="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                <span class="text-text-muted">Scheduled auto-updates</span>
              </li>
              <li class="flex items-start gap-3">
                <Check className="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                <span class="text-text-muted">Update on product save</span>
              </li>
              <li class="flex items-start gap-3">
                <Check className="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                <span class="text-text-muted">Facebook, Pinterest, TikTok, Bing, Snapchat</span>
              </li>
              <li class="flex items-start gap-3">
                <Check className="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                <span class="text-text-muted">Smart Auto-fill from product data</span>
              </li>
              <li class="flex items-start gap-3">
                <Check className="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                <span class="text-text-muted">Auto Category Mapping</span>
              </li>
              <li class="flex items-start gap-3">
                <Check className="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                <span class="text-text-muted">1 year of updates & support</span>
              </li>
            </ul>

            <a
              href={getCheckoutUrl(pricing, 'pro')}
              class="block w-full text-center px-6 py-3 rounded-lg font-medium bg-primary hover:bg-primary-dark text-white transition-colors mt-auto"
            >
              Buy Pro
            </a>
          </div>

          <!-- Agency -->
          <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100 flex flex-col hover:scale-[1.02] hover:shadow-lg transition-all duration-200">
            <div class="text-center mb-8">
              <h3 class="text-xl font-semibold text-text mb-2">Agency</h3>
              {promotion && (
                <div class="inline-block bg-red-100 text-red-700 text-xs font-semibold px-2 py-1 rounded-full mb-2">
                  {promotion.discount}% OFF
                </div>
              )}
              <div class="flex items-baseline justify-center gap-1">
                <span class="text-4xl font-bold text-text">${agencyMonthly}</span>
                <span class="text-text-muted">/month</span>
              </div>
              <p class="text-sm text-text-muted mt-1">
                {promotion ? (
                  <>
                    <span class="line-through text-text-muted/60">${pricing.agency.price}</span>
                    {' '}
                    <span class="text-green-600 font-semibold">${agencyPrice}/year</span>
                  </>
                ) : (
                  `Billed at $${pricing.agency.price}/year`
                )}
              </p>
              <p class="text-sm text-text-muted">Unlimited sites</p>
            </div>

            <ul class="space-y-4 mb-8">
              <li class="flex items-start gap-3">
                <Check className="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                <span class="text-text-muted">Everything in Pro</span>
              </li>
              <li class="flex items-start gap-3">
                <Check className="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                <span class="text-text-muted">Unlimited site activations</span>
