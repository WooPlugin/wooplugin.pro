---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FAQ from '../components/FAQ';
import ContactForm from '../components/ContactForm';
import { Check, X } from 'lucide-react';

const wpOrgUrl = 'https://wordpress.org/plugins/gtin-product-feed-for-google-shopping/?utm_source=wooplugin&utm_medium=website&utm_campaign=homepage';

const homepageFaqs = [
  {
    question: 'Is GTIN/Brand/MPN really free?',
    answer: 'Yes, completely free with no limits. We believe product identifiers are essential features, not premium upsells. Use them on all your products and variations.',
  },
  {
    question: 'What\'s the catch? Why is it free?',
    answer: 'No catch. The Pro version adds automation (scheduled updates, auto-regeneration) for stores that need it. Most stores work great with the free version forever.',
  },
  {
    question: 'How is this different from Google\'s official plugin?',
    answer: 'Google\'s plugin requires WordPress.com/Jetpack connection. Ours is standalone—just install and use. No account required, no external dependencies.',
  },
  {
    question: 'Do I need a GTIN for every product?',
    answer: 'Not always. Products without GTINs (handmade, custom, vintage) can use identifier_exists=false. But products with GTINs perform better on Google Shopping.',
  },
];
---

<Layout
  title="WooPlugin.pro - Google Shopping for WooCommerce"
  description="Add GTIN, Brand, MPN fields to WooCommerce products. Generate Google Merchant Center feeds. Free plugin, unlimited products."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-3 py-1 mb-6 text-sm font-medium text-primary bg-primary/10 rounded-full">
          <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
          </span>
          Free WooCommerce Plugin
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-text mb-6">
          Sell on Google Shopping
          <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
            {' '}in 5 Minutes
          </span>
        </h1>

        <p class="text-lg sm:text-xl text-text-muted mb-8 max-w-2xl mx-auto">
          Add GTIN, Brand, MPN fields to your products.
          Auto-generate Google Merchant Center feeds.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <a href={wpOrgUrl} target="_blank" rel="noopener" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-primary rounded-lg hover:bg-primary/90 transition-colors">
            Get Free Plugin
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
          <a href="/google-shopping-pro" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-text border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
            View Pro Features
          </a>
        </div>

        <!-- Trust badges -->
        <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-text-muted">
          <span class="flex items-center gap-2">
            <Check className="w-4 h-4 text-accent" />
            Unlimited products
          </span>
          <span class="flex items-center gap-2">
            <Check className="w-4 h-4 text-accent" />
            No credit card required
          </span>
          <span class="flex items-center gap-2">
            <Check className="w-4 h-4 text-accent" />
            HPOS compatible
          </span>
        </div>
      </div>
    </section>

    <!-- Problem / Solution Section (Consolidated) -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-bg-alt">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            Google Shopping Made Simple
          </h2>
          <p class="text-lg text-text-muted max-w-2xl mx-auto">
            Other plugins charge €99/year for GTIN fields. We give you everything free.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Problems -->
          <div class="space-y-4">
            <h3 class="font-semibold text-text mb-4 flex items-center gap-2">
              <X className="w-5 h-5 text-red-500" />
              The Problems
            </h3>
            <div class="bg-white rounded-lg p-4 border border-red-100">
              <p class="text-text-muted text-sm">"Missing GTIN" errors in Google Merchant Center</p>
            </div>
            <div class="bg-white rounded-lg p-4 border border-red-100">
              <p class="text-text-muted text-sm">Plugins charging €99/year for basic GTIN fields</p>
            </div>
            <div class="bg-white rounded-lg p-4 border border-red-100">
              <p class="text-text-muted text-sm">Artificial 100-200 product limits on free versions</p>
            </div>
          </div>

          <!-- Solutions -->
          <div class="space-y-4">
            <h3 class="font-semibold text-text mb-4 flex items-center gap-2">
              <Check className="w-5 h-5 text-accent" />
              Our Solution
            </h3>
            <div class="bg-white rounded-lg p-4 border border-green-100">
              <p class="text-text-muted text-sm">Free GTIN, Brand, MPN fields on all products</p>
            </div>
            <div class="bg-white rounded-lg p-4 border border-green-100">
              <p class="text-text-muted text-sm">Google-compliant XML feed generation</p>
            </div>
            <div class="bg-white rounded-lg p-4 border border-green-100">
              <p class="text-text-muted text-sm">Unlimited products, no artificial restrictions</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works Section -->
    <section id="how-it-works" class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            How It Works
          </h2>
          <p class="text-lg text-text-muted">
            Three steps to Google Shopping
          </p>
        </div>

        <div class="relative grid md:grid-cols-3 gap-8">
          <!-- Connecting line (desktop only) -->
          <div class="hidden md:block absolute top-6 left-[16.67%] right-[16.67%] h-0.5 bg-gradient-to-r from-primary via-primary to-primary opacity-20"></div>

          <div class="relative text-center">
            <div class="relative z-10 flex items-center justify-center w-12 h-12 mx-auto mb-6 bg-primary text-white rounded-full font-bold text-lg shadow-lg shadow-primary/25">
              1
            </div>
            <h3 class="text-xl font-semibold text-text mb-3">Install Plugin</h3>
            <p class="text-text-muted">
              Install from WordPress.org or search "GTIN Google Shopping" in your WordPress dashboard.
            </p>
          </div>

          <div class="relative text-center">
            <div class="relative z-10 flex items-center justify-center w-12 h-12 mx-auto mb-6 bg-primary text-white rounded-full font-bold text-lg shadow-lg shadow-primary/25">
              2
            </div>
            <h3 class="text-xl font-semibold text-text mb-3">Add Product Data</h3>
            <p class="text-text-muted">
              GTIN, Brand, and MPN fields appear in your product editor. Fill them in.
            </p>
          </div>

          <div class="relative text-center">
            <div class="relative z-10 flex items-center justify-center w-12 h-12 mx-auto mb-6 bg-primary text-white rounded-full font-bold text-lg shadow-lg shadow-primary/25">
              3
            </div>
            <h3 class="text-xl font-semibold text-text mb-3">Generate Feed</h3>
            <p class="text-text-muted">
              One click to generate XML. Copy the URL into Google Merchant Center. Done.
            </p>
          </div>
        </div>

        <div class="text-center mt-12">
          <a href={wpOrgUrl} target="_blank" rel="noopener" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-primary rounded-lg hover:bg-primary/90 transition-colors">
            Get Free Plugin
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-bg-alt">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            Everything You Need
          </h2>
          <p class="text-lg text-text-muted">
            No hidden features. No surprise paywalls.
          </p>
        </div>

        <div class="grid sm:grid-cols-2 gap-6">
          <div class="flex items-start gap-4 p-6 bg-white rounded-xl">
            <div class="w-10 h-10 rounded-lg bg-accent/10 flex items-center justify-center flex-shrink-0">
              <Check className="w-5 h-5 text-accent" />
            </div>
            <div>
              <h3 class="font-semibold text-text mb-1">GTIN, Brand, MPN Fields</h3>
              <p class="text-sm text-text-muted">Add product identifiers to simple and variable products.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-6 bg-white rounded-xl">
            <div class="w-10 h-10 rounded-lg bg-accent/10 flex items-center justify-center flex-shrink-0">
              <Check className="w-5 h-5 text-accent" />
            </div>
            <div>
              <h3 class="font-semibold text-text mb-1">Google Merchant XML Feed</h3>
              <p class="text-sm text-text-muted">Generate compliant feeds that Google accepts.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-6 bg-white rounded-xl">
            <div class="w-10 h-10 rounded-lg bg-accent/10 flex items-center justify-center flex-shrink-0">
              <Check className="w-5 h-5 text-accent" />
            </div>
            <div>
              <h3 class="font-semibold text-text mb-1">Unlimited Products</h3>
              <p class="text-sm text-text-muted">No artificial limits. 10 products or 10,000—same free plugin.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-6 bg-white rounded-xl">
            <div class="w-10 h-10 rounded-lg bg-accent/10 flex items-center justify-center flex-shrink-0">
              <Check className="w-5 h-5 text-accent" />
            </div>
            <div>
              <h3 class="font-semibold text-text mb-1">Variable Product Support</h3>
              <p class="text-sm text-text-muted">Full support for WooCommerce variations.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-6 bg-white rounded-xl">
            <div class="w-10 h-10 rounded-lg bg-accent/10 flex items-center justify-center flex-shrink-0">
              <Check className="w-5 h-5 text-accent" />
            </div>
            <div>
              <h3 class="font-semibold text-text mb-1">HPOS Compatible</h3>
              <p class="text-sm text-text-muted">Ready for WooCommerce 8.x+ High-Performance Order Storage.</p>
            </div>
          </div>

          <div class="flex items-start gap-4 p-6 bg-white rounded-xl">
            <div class="w-10 h-10 rounded-lg bg-accent/10 flex items-center justify-center flex-shrink-0">
              <Check className="w-5 h-5 text-accent" />
            </div>
            <div>
              <h3 class="font-semibold text-text mb-1">Category Mapping</h3>
              <p class="text-sm text-text-muted">Map WooCommerce categories to Google's product taxonomy.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Social Proof Section -->
    <section class="py-16 px-4 sm:px-6 lg:px-8">
      <div class="max-w-4xl mx-auto text-center">
        <div class="flex flex-wrap items-center justify-center gap-8 text-text-muted">
          <div class="text-center">
            <div class="text-3xl font-bold text-text">Free</div>
            <div class="text-sm">GTIN Fields</div>
          </div>
          <div class="w-px h-12 bg-gray-200"></div>
          <div class="text-center">
            <div class="text-3xl font-bold text-text">Unlimited</div>
            <div class="text-sm">Products</div>
          </div>
          <div class="w-px h-12 bg-gray-200"></div>
          <div class="text-center">
            <div class="text-3xl font-bold text-text">100%</div>
            <div class="text-sm">Google Compliant</div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <FAQ
      client:visible
      faqs={homepageFaqs}
      title="Questions?"
      subtitle="Everything you need to know"
    />

    <!-- Final CTA Section -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-r from-primary to-secondary">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">
          Ready to Sell on Google Shopping?
        </h2>
        <p class="text-lg text-white/80 mb-8">
          Install from WordPress.org. Free forever for core features.
        </p>
        <a href={wpOrgUrl} target="_blank" rel="noopener" class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-primary bg-white rounded-lg hover:bg-gray-100 transition-colors">
          Get Free Plugin
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        </a>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            Questions?
          </h2>
          <p class="text-lg text-text-muted">
            I read every message and respond personally.
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
          <ContactForm client:visible />
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
