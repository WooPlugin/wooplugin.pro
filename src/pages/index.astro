            <li class="flex items-start gap-3">
              <Check className="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
              <span class="text-text-muted">Category mapping</span>
            </li>
          </ul>

          <a
            href="https://github.com/wooplugin/product-feed-for-woocommerce/releases/latest"
            class="block w-full text-center px-6 py-3 rounded-lg font-medium bg-primary hover:bg-primary-dark text-white transition-colors"
