---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactForm';
import { Check } from 'lucide-preact';
---

<Layout
  title="WooPlugin - WordPress Plugins That Actually Work"
  description="Focused WordPress plugins for WooCommerce stores and site owners. Google Shopping feeds, accessibility scanning, and more. Free on WordPress.org."
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-6xl mx-auto text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-text mb-6">
          WordPress Plugins
          <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
            {' '}That Actually Work
          </span>
        </h1>

        <p class="text-lg sm:text-xl text-text-muted mb-8 max-w-2xl mx-auto">
          Focused tools for WooCommerce store owners and WordPress site managers.
          No bloat. No tracking. Just clean code that solves real problems.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <a href="#plugins" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-primary rounded-lg hover:bg-primary/90 transition-colors">
            Browse Plugins
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
          </a>
          <a href="https://wordpress.org/plugins/gtin-product-feed-for-google-shopping/?utm_source=wooplugin&utm_medium=website&utm_campaign=homepage" target="_blank" rel="noopener" class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-text border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
            View on WordPress.org
          </a>
        </div>

        <!-- Trust badges -->
        <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-text-muted">
          <span class="flex items-center gap-2">
            <Check className="w-4 h-4 text-accent" />
            Free on WordPress.org
          </span>
          <span class="flex items-center gap-2">
            <Check className="w-4 h-4 text-accent" />
            No tracking
          </span>
          <span class="flex items-center gap-2">
            <Check className="w-4 h-4 text-accent" />
            WordPress coding standards
          </span>
          <span class="flex items-center gap-2">
            <Check className="w-4 h-4 text-accent" />
            PHP 8.0+
          </span>
        </div>
      </div>
    </section>

    <!-- Plugins Section -->
    <section id="plugins" class="py-20 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-white to-bg-alt">
      <div class="max-w-5xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            Our Plugins
          </h2>
          <p class="text-lg text-text-muted">
            Each plugin does one thing well
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <!-- Google Shopping Plugin -->
          <a href="/google-shopping" class="group bg-white rounded-2xl border border-gray-200 p-8 hover:border-primary/30 hover:shadow-lg transition-all duration-200">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-text group-hover:text-primary transition-colors">Google Shopping</h3>
                <p class="text-sm text-text-muted">Product Feed for WooCommerce</p>
              </div>
            </div>

            <p class="text-text-muted mb-6">
              Add GTIN, Brand, MPN fields to your products. Generate Google Merchant Center feeds. Sell on Google Shopping in 5 minutes.
            </p>

            <div class="space-y-2 mb-6">
              <p class="text-xs font-semibold uppercase tracking-wider text-text-muted">Free</p>
              <div class="flex flex-wrap gap-2">
                <span class="text-xs px-2 py-1 bg-gray-100 rounded-md text-text-muted">GTIN, Brand, MPN fields</span>
                <span class="text-xs px-2 py-1 bg-gray-100 rounded-md text-text-muted">Unlimited products</span>
                <span class="text-xs px-2 py-1 bg-gray-100 rounded-md text-text-muted">XML feed generation</span>
              </div>
              <p class="text-xs font-semibold uppercase tracking-wider text-text-muted mt-3">Pro</p>
              <div class="flex flex-wrap gap-2">
                <span class="text-xs px-2 py-1 bg-primary/5 rounded-md text-primary">Scheduled updates</span>
                <span class="text-xs px-2 py-1 bg-primary/5 rounded-md text-primary">6 feed channels</span>
                <span class="text-xs px-2 py-1 bg-primary/5 rounded-md text-primary">Category mapping</span>
              </div>
            </div>

            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <span class="inline-flex items-center gap-1.5 text-xs font-medium text-accent bg-accent/10 px-2 py-1 rounded-full">
                  <span class="w-1.5 h-1.5 rounded-full bg-accent"></span>
                  On WordPress.org
                </span>
              </div>
              <span class="text-sm text-text-muted">
                Free &middot; Pro from $79/yr
              </span>
            </div>
          </a>

          <!-- Accessibility Scanner Plugin -->
          <a href="/accessibility-scanner" class="group bg-white rounded-2xl border border-gray-200 p-8 hover:border-primary/30 hover:shadow-lg transition-all duration-200">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-bold text-text group-hover:text-primary transition-colors">Accessibility Scanner</h3>
                <p class="text-sm text-text-muted">WCAG Compliance for WordPress</p>
              </div>
            </div>

            <p class="text-text-muted mb-6">
              Scan your WordPress site for WCAG 2.2 accessibility issues. Find real problems in your HTML, fix them, prove compliance. No overlay widgets.
            </p>

            <div class="space-y-2 mb-6">
              <p class="text-xs font-semibold uppercase tracking-wider text-text-muted">Free</p>
              <div class="flex flex-wrap gap-2">
                <span class="text-xs px-2 py-1 bg-gray-100 rounded-md text-text-muted">20+ WCAG 2.2 checks</span>
                <span class="text-xs px-2 py-1 bg-gray-100 rounded-md text-text-muted">Quick fixes</span>
                <span class="text-xs px-2 py-1 bg-gray-100 rounded-md text-text-muted">Accessibility score</span>
              </div>
              <p class="text-xs font-semibold uppercase tracking-wider text-text-muted mt-3">Pro</p>
              <div class="flex flex-wrap gap-2">
                <span class="text-xs px-2 py-1 bg-primary/5 rounded-md text-primary">Unlimited scans</span>
                <span class="text-xs px-2 py-1 bg-primary/5 rounded-md text-primary">Full site crawl</span>
                <span class="text-xs px-2 py-1 bg-primary/5 rounded-md text-primary">PDF reports</span>
              </div>
            </div>

            <div class="flex items-center justify-between">
              <div class="flex items-center gap-3">
                <span class="inline-flex items-center gap-1.5 text-xs font-medium text-amber-600 bg-amber-50 px-2 py-1 rounded-full">
                  <span class="w-1.5 h-1.5 rounded-full bg-amber-500"></span>
                  Coming Soon
                </span>
              </div>
              <span class="text-sm text-text-muted">
                Free &middot; Pro from $99/yr
              </span>
            </div>
          </a>
        </div>
      </div>
    </section>

    <!-- Why WooPlugin Section -->
    <section class="py-20 px-4 sm:px-6 lg:px-8 bg-bg-alt">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            Why WooPlugin?
          </h2>
          <p class="text-lg text-text-muted">
            What makes us different
          </p>
        </div>

        <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="text-center p-6 bg-white rounded-xl border border-gray-100">
            <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-primary/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="font-semibold text-text mb-2">Focused</h3>
            <p class="text-sm text-text-muted">One job per plugin, done right. No feature creep or kitchen-sink bundles.</p>
          </div>

          <div class="text-center p-6 bg-white rounded-xl border border-gray-100">
            <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-accent/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-semibold text-text mb-2">Actually Free</h3>
            <p class="text-sm text-text-muted">No artificial product limits. No fake free tiers. Core features stay free forever.</p>
          </div>

          <div class="text-center p-6 bg-white rounded-xl border border-gray-100">
            <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-secondary/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
            </div>
            <h3 class="font-semibold text-text mb-2">No Bloat</h3>
            <p class="text-sm text-text-muted">Lightweight plugins. No jQuery bloat. No tracking scripts. No frontend impact.</p>
          </div>

          <div class="text-center p-6 bg-white rounded-xl border border-gray-100">
            <div class="w-12 h-12 mx-auto mb-4 rounded-full bg-primary/10 flex items-center justify-center">
              <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
              </svg>
            </div>
            <h3 class="font-semibold text-text mb-2">Clean Code</h3>
            <p class="text-sm text-text-muted">WordPress coding standards. PHP 8.0+. Tested with latest WooCommerce and WordPress.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-20 px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
            Questions?
          </h2>
          <p class="text-lg text-text-muted">
            I read every message and respond personally.
          </p>
        </div>

        <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
          <ContactForm client:visible />
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
