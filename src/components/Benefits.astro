---
import { Package, RefreshCw, BarChart3 } from 'lucide-react';

const benefits = [
  {
    icon: Package,
    title: 'Product Attributes',
    description: 'Add GTIN, MPN, Brand, and EAN fields to any product. Supports simple and variable products.',
  },
  {
    icon: RefreshCw,
    title: 'Auto-Sync',
    description: 'Automatic feed updates when products change. Scheduled regeneration twice daily.',
  },
  {
    icon: BarChart3,
    title: 'Multi-Feed Support',
    description: 'Generate feeds for Google Shopping, Facebook, and Instagram from one plugin.',
  },
];
---

<section id="features" class="py-20 px-4 sm:px-6 lg:px-8 bg-bg-alt">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
        Everything You Need for Product Feeds
      </h2>
      <p class="text-lg text-text-muted max-w-2xl mx-auto">
        Simple setup, powerful features. Get your products on Google Shopping in minutes.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {benefits.map(benefit => (
        <div class="bg-white rounded-xl p-8 shadow-sm border border-gray-100 hover:shadow-md transition-shadow">
          <div class="w-12 h-12 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
            <benefit.icon className="w-6 h-6 text-primary" />
          </div>
          <h3 class="text-xl font-semibold text-text mb-3">
            {benefit.title}
          </h3>
          <p class="text-text-muted">
            {benefit.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
