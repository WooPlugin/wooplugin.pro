---
import { Check } from 'lucide-react';

interface Plan {
  name: string;
  price: string;
  priceMonthly?: string;
  period: string;
  description: string;
  features: string[];
  cta: string;
  ctaHref: string;
  highlighted: boolean;
}

interface Props {
  plans?: Plan[];
  title?: string;
  subtitle?: string;
}

const defaultPlans: Plan[] = [
  {
    name: 'Free',
    price: '$0',
    period: 'forever',
    description: 'Everything you need to get started',
    features: [
      'Unlimited products',
      'Google Shopping feed',
      'GTIN, Brand, MPN fields',
      'Variable product support',
      'Manual feed generation',
    ],
    cta: 'Download Free',
    ctaHref: '#download',
    highlighted: false,
  },
  {
    name: 'Pro',
    price: '$7',
    priceMonthly: '/month',
    period: 'Billed at $79/year',
    description: 'Automation for busy stores',
    features: [
      'Everything in Free',
      'Automatic scheduled updates',
      'Update feed on product save',
      'Facebook, Pinterest, TikTok, Bing, Snapchat feeds',
      'Priority email support',
    ],
    cta: 'Get Pro',
    ctaHref: '/google-shopping-pro',
    highlighted: true,
  },
  {
    name: 'Agency',
    price: '$25',
    priceMonthly: '/month',
    period: 'Billed at $299/year',
    description: 'For agencies & developers',
    features: [
      'Everything in Pro',
      'Unlimited sites',
      'Early access to features',
      'Priority support',
    ],
    cta: 'Get Pro',
    ctaHref: '/google-shopping-pro',
    highlighted: false,
  },
];

const {
  plans = defaultPlans,
  title = 'Simple, Transparent Pricing',
  subtitle = 'Start free, upgrade when you need more'
} = Astro.props;
---

<section id="pricing" class="py-20 px-4 sm:px-6 lg:px-8 bg-bg-alt">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-3xl sm:text-4xl font-bold text-text mb-4">
        {title}
      </h2>
      <p class="text-lg text-text-muted max-w-2xl mx-auto">
        {subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {plans.map(plan => (
        <div class={`relative bg-white rounded-2xl p-8 shadow-sm border ${plan.highlighted ? 'border-primary ring-2 ring-primary/20' : 'border-gray-100'}`}>
          {plan.highlighted && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2">
              <span class="inline-flex items-center px-3 py-1 text-xs font-semibold text-white bg-primary rounded-full">
                Most Popular
              </span>
            </div>
          )}

          <div class="text-center mb-8">
            <h3 class="text-xl font-semibold text-text mb-2">{plan.name}</h3>
            <div class="flex items-baseline justify-center gap-1">
              <span class="text-4xl font-bold text-text">{plan.price}</span>
              {plan.priceMonthly && (
                <span class="text-text-muted">{plan.priceMonthly}</span>
              )}
            </div>
            <p class="text-sm text-text-muted mt-1">{plan.period}</p>
            <p class="text-sm text-text-muted mt-2">{plan.description}</p>
          </div>

          <ul class="space-y-4 mb-8">
            {plan.features.map(feature => (
              <li class="flex items-start gap-3">
                <Check className="w-5 h-5 text-accent flex-shrink-0 mt-0.5" />
                <span class="text-text-muted">{feature}</span>
              </li>
            ))}
          </ul>

          <a
            href={plan.ctaHref}
            class={`block w-full text-center px-6 py-3 rounded-lg font-medium transition-colors ${
              plan.highlighted
                ? 'bg-primary hover:bg-primary-dark text-white'
                : 'bg-gray-100 hover:bg-gray-200 text-text'
            }`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
