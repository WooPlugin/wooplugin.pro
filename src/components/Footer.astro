---
const currentYear = new Date().getFullYear();

const pluginLinks = [
  { href: '/google-shopping', label: 'Google Shopping' },
  { href: '/accessibility-scanner', label: 'Accessibility Scanner' },
];

const docsLinks = [
  { href: '/docs', label: 'All Documentation' },
  { href: '/docs/getting-started/installation', label: 'Google Shopping Docs' },
  { href: '/docs/accessibility/getting-started/installation', label: 'Accessibility Docs' },
  { href: '/guides', label: 'Guides' },
];

const supportLinks = [
  { href: '/support', label: 'Support' },
  { href: '/support#google-shopping', label: 'Google Shopping Help' },
  { href: '/support#accessibility-scanner', label: 'Accessibility Help' },
  { href: 'https://profiles.wordpress.org/w03d/', label: 'WordPress.org', external: true },
];

const legalLinks = [
  { href: '/privacy', label: 'Privacy' },
  { href: '/terms', label: 'Terms' },
];
---

<footer class="py-12 px-4 sm:px-6 lg:px-8 border-t border-gray-100">
  <div class="max-w-6xl mx-auto">
    <div class="grid md:grid-cols-5 gap-8 mb-8">
      <!-- Brand -->
      <div>
        <a href="/" class="inline-flex items-baseline mb-4">
          <span class="text-xl font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
            WooPlugin
          </span>
          <span class="text-sm font-medium text-text-muted">.pro</span>
        </a>
        <p class="text-sm text-text-muted max-w-xs">
          Focused WordPress plugins that do one thing well. No bloat, no tracking, just clean code.
        </p>
      </div>

      <!-- Plugins -->
      <div>
        <p class="font-semibold text-text mb-4">Plugins</p>
        <nav class="flex flex-col gap-2">
          {pluginLinks.map(link => (
            <a
              href={link.href}
              class="text-sm text-text-muted hover:text-primary transition-colors"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>

      <!-- Documentation -->
      <div>
        <p class="font-semibold text-text mb-4">Documentation</p>
        <nav class="flex flex-col gap-2">
          {docsLinks.map(link => (
            <a
              href={link.href}
              class="text-sm text-text-muted hover:text-primary transition-colors"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>

      <!-- Support -->
      <div>
        <p class="font-semibold text-text mb-4">Support</p>
        <nav class="flex flex-col gap-2">
          {supportLinks.map(link => (
            <a
              href={link.href}
              class="text-sm text-text-muted hover:text-primary transition-colors"
              {...(link.external ? { target: '_blank', rel: 'noopener' } : {})}
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>

      <!-- Legal -->
      <div>
        <p class="font-semibold text-text mb-4">Legal</p>
        <nav class="flex flex-col gap-2">
          {legalLinks.map(link => (
            <a
              href={link.href}
              class="text-sm text-text-muted hover:text-primary transition-colors"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>
    </div>

    <div class="pt-8 border-t border-gray-100">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <span class="text-sm text-text-muted">
          &copy; {currentYear} WooPlugin.pro. All rights reserved.
        </span>
        <p class="text-xs text-text-muted text-center md:text-right">
          WooCommerce is a registered trademark of Automattic Inc.
          This plugin is not affiliated with or endorsed by Automattic.
        </p>
      </div>
    </div>
  </div>
</footer>
