---
const currentYear = new Date().getFullYear();

const links = [
  { href: '/privacy', label: 'Privacy' },
  { href: '/terms', label: 'Terms' },
  { href: '#contact', label: 'Contact' },
];
---

<footer class="py-12 px-4 sm:px-6 lg:px-8 border-t border-gray-100">
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <!-- Logo & Copyright -->
      <div class="flex items-center gap-4">
        <span class="text-lg font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
          WooPlugin
        </span>
        <span class="text-sm text-text-muted">
          &copy; {currentYear} WooPlugin. All rights reserved.
        </span>
      </div>

      <!-- Links -->
      <nav class="flex items-center gap-6">
        {links.map(link => (
          <a
            href={link.href}
            class="text-sm text-text-muted hover:text-primary transition-colors"
          >
            {link.label}
          </a>
        ))}
      </nav>
    </div>

    <!-- Attribution -->
    <div class="mt-8 pt-8 border-t border-gray-100 text-center">
      <p class="text-xs text-text-muted">
        WooCommerce is a registered trademark of Automattic Inc.
        This plugin is not affiliated with or endorsed by Automattic.
      </p>
    </div>
  </div>
</footer>
