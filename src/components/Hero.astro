---
import { Check } from 'lucide-react';

const badges = [
  'WooCommerce 8.x+',
  'HPOS Ready',
  'GPL Licensed',
];
---

<section class="pt-32 pb-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-6xl mx-auto">
    <div class="text-center max-w-3xl mx-auto">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-3 py-1 mb-6 text-sm font-medium text-primary bg-primary/10 rounded-full">
        <span class="relative flex h-2 w-2">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
        </span>
        Free WooCommerce Plugin
      </div>

      <!-- Headline -->
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight text-text mb-6">
        Sell on Google Shopping
        <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
          {' '}in 5 Minutes
        </span>
      </h1>

      <!-- Subheadline -->
      <p class="text-lg sm:text-xl text-text-muted mb-8 max-w-2xl mx-auto">
        Add GTIN, Brand, MPN fields to your products.
        Auto-generate Google Merchant Center feeds.
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-12">
        <a
          href="#download"
          class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-3 text-base font-medium text-white bg-primary hover:bg-primary-dark rounded-lg transition-colors shadow-lg shadow-primary/25"
        >
          Download Free
        </a>
        <a
          href="#features"
          class="w-full sm:w-auto inline-flex items-center justify-center px-8 py-3 text-base font-medium text-text-muted bg-white hover:bg-gray-50 border border-gray-200 rounded-lg transition-colors"
        >
          Learn More
        </a>
      </div>

      <!-- Screenshot -->
      <div class="relative mx-auto max-w-4xl">
        <div class="absolute inset-0 bg-gradient-to-r from-primary/20 to-secondary/20 rounded-2xl blur-3xl -z-10"></div>
        <div class="bg-white rounded-2xl shadow-2xl border border-gray-100 overflow-hidden">
          <div class="bg-gray-100 px-4 py-3 flex items-center gap-2">
            <div class="flex gap-1.5">
              <div class="w-3 h-3 rounded-full bg-red-400"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-400"></div>
              <div class="w-3 h-3 rounded-full bg-green-400"></div>
            </div>
            <div class="flex-1 text-center text-xs text-gray-500">
              WooCommerce Product Editor
            </div>
          </div>
          <div class="p-8 bg-gradient-to-b from-gray-50 to-white min-h-[300px] flex items-center justify-center">
            <div class="text-center">
              <div class="w-16 h-16 mx-auto mb-4 bg-primary/10 rounded-2xl flex items-center justify-center">
                <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
              <p class="text-gray-400 text-sm">Product screenshot placeholder</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Trust Badges -->
      <div class="flex flex-wrap items-center justify-center gap-x-6 gap-y-2 mt-8">
        {badges.map(badge => (
          <div class="flex items-center gap-2 text-sm text-text-muted">
            <Check className="w-4 h-4 text-accent" />
            <span>{badge}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
